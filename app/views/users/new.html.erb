<h4>Sign up</h4>

<% if @user.errors %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <div><%= f.text_field :username %></div>
  <%= f.label :password %>
  <div><%= f.password_field :password %></div>
  <%= f.label :password_confirmation %>
  <div><%= f.password_field :password_confirmation %></div>
  <br>
  <%= f.submit "Submit" %>
<% end %>